{
	"name": "codestats-readme",
	"version": "1.0.0",
	"packageManager": "pnpm@9.12.0",
	"description": "Add codestats metrics to your readme file",
	"main": "index.js",
	"scripts": {
		"test": "vitest run",
		"test:watch": "vitest",
		"coverage": "vitest run --coverage",
		"commit": "cz",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/vergissberlin/codestats-readme.git"
	},
	"keywords": [
		"codestats",
		"github",
		"workflow"
	],
	"author": "Andr√© Lademann",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/vergissberlin/codestats-readme/issues"
	},
	"homepage": "https://github.com/vergissberlin/codestats-readme#readme",
	"dependencies": {
		"bars": "github:jstrace/bars",
		"simple-git": "^3.28.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@vitest/coverage-v8": "^3.2.4",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^9.1.7",
		"nock": "^14.0.10",
		"vitest": "^3.2.4"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
