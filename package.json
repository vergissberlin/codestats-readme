{
  "name": "codestats-readme",
  "version": "1.0.0",
  "packageManager": "pnpm@9.12.0",
  "description": "Add codestats metrics to your readme file",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "build": "tsc",
    "build:clean": "rm -rf dist && pnpm run build",
    "dev": "tsx src/index.ts",
    "lint": "pnpm run lint:ts && pnpm run lint:md",
    "lint:ts": "eslint src/**/*.ts",
    "lint:md": "markdownlint-cli2 '**/*.md' '!node_modules/**/*'",
    "lint:fix": "pnpm run lint:ts:fix && pnpm run lint:md:fix",
    "lint:ts:fix": "eslint src/**/*.ts --fix",
    "lint:md:fix": "markdownlint-cli2 '**/*.md' '!node_modules/**/*' --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "commit": "cz",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vergissberlin/codestats-readme.git"
  },
  "keywords": [
    "codestats",
    "github",
    "workflow"
  ],
  "author": "Andr√© Lademann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vergissberlin/codestats-readme/issues"
  },
  "homepage": "https://github.com/vergissberlin/codestats-readme#readme",
  "dependencies": {
    "bars": "github:jstrace/bars",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-v8": "^3.2.4",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.35.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "markdownlint-cli2": "^0.18.1",
    "nock": "^14.0.10",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
